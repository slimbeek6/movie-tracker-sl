<h1>Movie Watchlist</h1>

<div class= "containter">
    <div class = "row">
        <section class = "col-6">
            <h2>Movies to Watch</h2>
            <ul>
            {{#each movies}}
                {{#unless watched}}
                    {{> movie-block watched=false}}
                {{/unless}}
            {{/each}}
            </ul>
        
        </section>

        <section class = "col-6">
            <h2>Watched Movies</h2>
            <ul id="watchedList">
            {{#each movies}}
                {{#if watched}}
                    {{> watched-block watched=true}}
                {{/if}}
            {{/each}}
            </ul>
        </section>
    </div>

<h2>Add a Movie</h2>
<form class="create-form">

  <div class="form-group">
    <label for="mov">Movie Title:</label>
    <input type="text" id="mov" name="title">
  </div>

  <div class="form-group">
    <label for="rat">Rating:</label>
    <input type="number" id="rat" name="rat">
  </div>

  <div class="form-group">
    <label for="rely">Release Year:</label>
    <input type="number" id="rely" name="rely">
  </div>

  <button id="addNew" type="submit">Add Movie</button>
</form>


</div>